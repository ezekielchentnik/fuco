{
  "name": "functional-web-component",
  "version": "0.4.1",
  "description": "Functional Component like React, but for Web Components",
  "main": "dist/functional-web-component.js",
  "module": "dist/functional-web-component.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/test"
  ],
  "scripts": {
    "build": "tsc && rollup -c",
    "test": "karma start",
    "lint": "tsc --noEmit && eslint src --ext .ts",
    "fmt": "npm run lint -- --fix",
    "clean": "rm -fr dist coverage .tsbuildinfo",
    "distclean": "npm run clean && rm -fr node_modules package-lock.json",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "webcomponents",
    "lit-html",
    "hooks"
  ],
  "author": "Keisuke Watanabe",
  "license": "MIT",
  "homepage": "https://github.com/wtnbass/functional-web-component",
  "repository": "wtnbass/functional-web-component",
  "dependencies": {
    "lit-html": "1.1.0"
  },
  "devDependencies": {
    "@types/jasmine": "3.3.13",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "codecov": "3.5.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "4.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-firefox-launcher": "1.1.0",
    "karma-jasmine": "2.0.1",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "4.0.2",
    "prettier": "1.18.2",
    "rollup": "1.16.2",
    "rollup-plugin-filesize": "6.1.1",
    "rollup-plugin-terser": "5.0.0",
    "ts-loader": "6.0.4",
    "typescript": "3.5.2",
    "webpack": "4.35.0"
  }
}
